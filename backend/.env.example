# Environment variables cho CityLens Backend
# Copy file này thành .env và điền các giá trị thực

# Application
PROJECT_NAME=CityLens LOD Cloud
VERSION=1.0.0
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS - Danh sách origins cách nhau bằng dấu phẩy
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# PostgreSQL + PostGIS
POSTGRES_SERVER=localhost
POSTGRES_USER=citylens
POSTGRES_PASSWORD=citylens_password
POSTGRES_DB=citylens_db
POSTGRES_PORT=5432

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=citylens_realtime

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# GraphDB
GRAPHDB_URL=http://localhost:7200
GRAPHDB_REPOSITORY=citylens

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key
OPENAQ_API_KEY=your-openaq-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Gamification
POINTS_PER_REPORT=10
POINTS_PER_VERIFICATION=5
REPUTATION_THRESHOLD_TRUSTED=0.8
