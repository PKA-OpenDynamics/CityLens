# Environment variables cho CityLens Backend
# Copy file này thành .env và điền các giá trị thực

# =============================================================================
# APPLICATION
# =============================================================================
PROJECT_NAME=CityLens
VERSION=1.0.0
API_V1_STR=/api/v1
LOG_LEVEL=INFO

# =============================================================================
# SECURITY
# =============================================================================
# Sinh secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# =============================================================================
# CORS
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# =============================================================================
# POSTGRESQL + POSTGIS
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_USER=citylens
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=citylens
POSTGRES_PORT=5432

# =============================================================================
# MONGODB (Docker - for Web Dashboard Authentication)
# =============================================================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=citylens_realtime

# =============================================================================
# MONGODB ATLAS (Cloud - for Mobile App Authentication & Reports)
# =============================================================================
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_ATLAS_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/
MONGODB_ATLAS_DB=citylens_app

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# GRAPHDB (Optional - for Linked Open Data)
# =============================================================================
GRAPHDB_URL=http://localhost:7200

# =============================================================================
# MEDIA STORAGE
# =============================================================================
MEDIA_STORAGE=local
UPLOAD_DIR=./uploads

# =============================================================================
# EXTERNAL APIs (Get your own keys)
# =============================================================================
# OpenWeatherMap: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweathermap-api-key

# TomTom: https://developer.tomtom.com/
TOMTOM_API_KEY=your-tomtom-api-key

# AQICN (World Air Quality Index): https://aqicn.org/api/
AQICN_API_KEY=your-aqicn-api-key