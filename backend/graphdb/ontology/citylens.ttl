@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix geo: <http://www.w3.org/2003/01/geo/wgs84_pos#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix citylens: <http://citylens.io/ontology#> .

# ===========================
# CityLens Ontology
# Smart City LOD Architecture
# ===========================

citylens: rdf:type owl:Ontology ;
    dcterms:title "CityLens Ontology"@en ;
    dcterms:description "Ontology for citizen-generated urban reports and linked open data"@en ;
    dcterms:creator "CityLens Team" ;
    dcterms:created "2025-01-01"^^xsd:date .

# ===========================
# Classes - Geographic Entities
# ===========================

citylens:AdministrativeBoundary rdf:type owl:Class ;
    rdfs:label "Administrative Boundary"@en ;
    rdfs:label "Ranh giới hành chính"@vi ;
    rdfs:comment "Districts, wards of Ho Chi Minh City"@en .

citylens:Street rdf:type owl:Class ;
    rdfs:label "Street"@en ;
    rdfs:label "Đường phố"@vi ;
    rdfs:comment "Roads and streets in the city"@en .

citylens:Building rdf:type owl:Class ;
    rdfs:label "Building"@en ;
    rdfs:label "Tòa nhà"@vi ;
    rdfs:comment "Buildings and constructions"@en .

# ===========================
# Classes - Urban Infrastructure
# ===========================

citylens:PublicFacility rdf:type owl:Class ;
    rdfs:label "Public Facility"@en ;
    rdfs:label "Cơ sở công cộng"@vi ;
    rdfs:comment "Hospitals, schools, parks, police stations"@en .

citylens:TransportFacility rdf:type owl:Class ;
    rdfs:label "Transport Facility"@en ;
    rdfs:label "Cơ sở giao thông"@vi ;
    rdfs:comment "Bus stops, metro stations, parking"@en .

# ===========================
# Classes - Citizen Data
# ===========================

citylens:Report rdf:type owl:Class ;
    rdfs:label "Citizen Report"@en ;
    rdfs:label "Báo cáo công dân"@vi ;
    rdfs:comment "User-generated urban issue reports"@en .

citylens:Citizen rdf:type owl:Class ;
    rdfs:subClassOf foaf:Person ;
    rdfs:label "Citizen"@en ;
    rdfs:label "Công dân"@vi ;
    rdfs:comment "Registered user who can create reports"@en .

citylens:ReportCategory rdf:type owl:Class ;
    rdfs:label "Report Category"@en ;
    rdfs:label "Danh mục báo cáo"@vi ;
    rdfs:comment "Classification of urban issues"@en .

# ===========================
# Properties - Geographic
# ===========================

citylens:hasGeometry rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:AdministrativeBoundary ;
    rdfs:range xsd:string ;
    rdfs:label "has geometry"@en .

citylens:adminLevel rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:AdministrativeBoundary ;
    rdfs:range xsd:integer ;
    rdfs:label "admin level"@en ;
    rdfs:comment "4=city, 6=district, 8=ward"@en .

citylens:streetType rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Street ;
    rdfs:range xsd:string ;
    rdfs:label "street type"@en .

citylens:lengthMeters rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Street ;
    rdfs:range xsd:float ;
    rdfs:label "length in meters"@en .

# ===========================
# Properties - Report
# ===========================

citylens:reportedBy rdf:type owl:ObjectProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range citylens:Citizen ;
    rdfs:label "reported by"@en .

citylens:hasCategory rdf:type owl:ObjectProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range citylens:ReportCategory ;
    rdfs:label "has category"@en .

citylens:relatedToFacility rdf:type owl:ObjectProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range citylens:PublicFacility ;
    rdfs:label "related to facility"@en .

citylens:relatedToStreet rdf:type owl:ObjectProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range citylens:Street ;
    rdfs:label "related to street"@en .

citylens:locatedIn rdf:type owl:ObjectProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range citylens:AdministrativeBoundary ;
    rdfs:label "located in"@en .

citylens:reportTitle rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:string ;
    rdfs:label "report title"@en .

citylens:reportDescription rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:string ;
    rdfs:label "report description"@en .

citylens:reportStatus rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:string ;
    rdfs:label "report status"@en ;
    rdfs:comment "pending, verified, in_progress, resolved, rejected"@en .

citylens:reportPriority rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:string ;
    rdfs:label "report priority"@en ;
    rdfs:comment "low, normal, high, urgent"@en .

citylens:upvoteCount rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:integer ;
    rdfs:label "upvote count"@en .

citylens:latitude rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:float ;
    rdfs:label "latitude"@en .

citylens:longitude rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:float ;
    rdfs:label "longitude"@en .

citylens:createdAt rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Report ;
    rdfs:range xsd:dateTime ;
    rdfs:label "created at"@en .

# ===========================
# Properties - Citizen
# ===========================

citylens:username rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Citizen ;
    rdfs:range xsd:string ;
    rdfs:label "username"@en .

citylens:userRole rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Citizen ;
    rdfs:range xsd:string ;
    rdfs:label "user role"@en ;
    rdfs:comment "citizen, moderator, admin, government"@en .

citylens:reputationScore rdf:type owl:DatatypeProperty ;
    rdfs:domain citylens:Citizen ;
    rdfs:range xsd:integer ;
    rdfs:label "reputation score"@en .

# ===========================
# Category Instances
# ===========================

citylens:TrafficCategory rdf:type citylens:ReportCategory ;
    rdfs:label "Traffic"@en ;
    rdfs:label "Giao thông"@vi .

citylens:EnvironmentCategory rdf:type citylens:ReportCategory ;
    rdfs:label "Environment"@en ;
    rdfs:label "Môi trường"@vi .

citylens:InfrastructureCategory rdf:type citylens:ReportCategory ;
    rdfs:label "Infrastructure"@en ;
    rdfs:label "Hạ tầng"@vi .

citylens:SecurityCategory rdf:type citylens:ReportCategory ;
    rdfs:label "Security"@en ;
    rdfs:label "An ninh"@vi .

citylens:ServiceCategory rdf:type citylens:ReportCategory ;
    rdfs:label "Public Service"@en ;
    rdfs:label "Dịch vụ công"@vi .
